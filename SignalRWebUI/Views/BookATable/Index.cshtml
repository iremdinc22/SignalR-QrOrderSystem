
@model CreateBookingDto
@{ Layout = null; }

<!DOCTYPE html>
<html>
@await Component.InvokeAsync("UILayoutHeadPartial")
<body class="sub_page">
  @await Component.InvokeAsync("MenuNavbarPartial")

  <section class="book_section layout_padding">
    <div class="container">
      <div class="heading_container">
        <h2>Rezervasyon Oluşturun</h2>
      </div>

      <div class="row">
        <div class="col-md-6">
          <div class="form_container">

            
            <form id="bookForm" asp-controller="BookATable" asp-action="Index" method="post">
              

              <div class="mb-3">
                <input asp-for="Name" class="form-control" placeholder="Adınız Soyadınız" />
                <span class="text-danger" asp-validation-for="Name"></span>
              </div>

              <div class="mb-3">
                <input asp-for="Phone" class="form-control" placeholder="Telefon Numaranız" />
                <span class="text-danger" asp-validation-for="Phone"></span>
              </div>

              <div class="mb-3">
                <input asp-for="Mail" type="email" class="form-control" placeholder="Mail Adresiniz" />
                <span class="text-danger" asp-validation-for="Mail"></span>
              </div>

              <div class="mb-3">
                <select asp-for="PersonCount" class="form-control nice-select wide">
                  <option value="" disabled selected>Kaç Kişisiniz?</option>
                  <option value="1">1</option>
                  <option value="2">2</option>
                  <option value="3">3</option>
                  <option value="4">4</option>
                  <option value="5">5</option>
                  <option value="6">6+</option> <!-- value=6, görünen metin 6+ -->
                </select>
                <span class="text-danger" asp-validation-for="PersonCount"></span>
              </div>

              <div class="mb-3">
                <input asp-for="Date" type="date" class="form-control" />
                <span class="text-danger" asp-validation-for="Date"></span>
              </div>

              <div class="btn_box">
                <button type="submit" form="bookForm">Yerinizi Ayırtın</button>
              </div>

              <div class="text-danger mt-2" asp-validation-summary="ModelOnly"></div>
            </form>

          </div>
        </div>

        <div class="col-md-6">
        <div class="map_container ">
        <iframe
            src="@ViewBag.Location"
            width="600" height="450" style="border:0;" allowfullscreen="" loading="lazy"
            referrerpolicy="no-referrer-when-downgrade"></iframe>  
        </div>
      </div>
      </div>
    </div>
  </section>

  @await Component.InvokeAsync("UILayoutFooterPartial")
  @await Component.InvokeAsync("UILayoutScriptPartial")
</body>
</html>