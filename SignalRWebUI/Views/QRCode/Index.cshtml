@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="container d-flex flex-column align-items-center justify-content-center" style="min-height: 80vh;">
    <h3 class="text-center mb-4 mt-5">QR Kod Oluşturma Sayfası</h3>

    <form method="post" class="w-100" style="max-width: 500px;">
        <input type="text" name="value" class="form-control mb-3" placeholder="Metin veya URL giriniz" />
        <input type="submit" value="QR Kod Oluştur" class="btn btn-warning w-100" />
    </form>

    @if (ViewBag.QrCodeImage != null)
    {
        <div class="text-center mt-4">
            <h4>Oluşturulan QR Kod:</h4>
            <img src="@ViewBag.QrCodeImage" alt="QR Code"
                 class="img-fluid border rounded p-2"
                 style="max-width:400px; max-height:400px;" />
        </div>
    }
</div>
