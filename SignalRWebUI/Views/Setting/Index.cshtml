@model UserEditDto
@{ 
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";  
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Profil Ayarları</h4>
        <div class="row">
            <div class="col-md-12">
                <form asp-action="Index" method="post">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Bilgilerinizi Güncelleyin</div>
                        </div>

                        <div class="card-body">
                            <div class="form-group">
                                <label for="name">İsminiz</label>
                                <input asp-for="Name" type="text" class="form-control" id="name" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label for="surname">Soyadınız</label>
                                <input asp-for="Surname" type="text" class="form-control" id="surname" />
                                <span asp-validation-for="Surname" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label for="mail">Mailiniz</label>
                                <input asp-for="Mail" type="email" class="form-control" id="mail" />
                                <span asp-validation-for="Mail" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label for="username">Kullanıcı Adınız</label>
                                <input asp-for="Username" type="text" class="form-control" id="username" />
                                <span asp-validation-for="Username" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label for="password">Şifreniz</label>
                                <input asp-for="Password" type="password" class="form-control" id="password" />
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label for="confirmPassword">Şifre Tekrar</label>
                                <input asp-for="ConfirmPassword" type="password" class="form-control" id="confirmPassword" />
                                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="card-action">
                            <button type="submit" class="btn btn-primary">Güncelle</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
